            var n = 1
            var timer =setInterval(function(){
                //substring字符串截取，第一个参数开始位置，第二个参数结束位置
                style_app.innerHTML = style_text.substring(0,n)
                style_text_obj.innerHTML = style_text.substring(0,n)
                n++
                if(n === style_text.length){
